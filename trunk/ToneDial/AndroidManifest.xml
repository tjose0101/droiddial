<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="net.xpdeveloper.dialer" android:versionCode="7"
	android:versionName="0.007">

	<uses-permission android:name="android.permission.PROCESS_OUTGOING_CALLS" />

	<application android:label="@string/app_name"
		android:debuggable="false" android:icon="@drawable/ic_launcher">

		<activity android:label="@string/app_name" android:name=".ToneDialActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>

		<service android:name=".ToneDialService">
			<intent-filter>
				<action android:name="net.xpdeveloper.dialer.PREFERENCE_CHANGE" />
				<action android:name="net.xpdeveloper.dialer.SERVICE_STATE_CHANGE" />
			</intent-filter>
		</service>

	</application>

	<!-- Required for robotium testing
	<uses-permission android:name="android.permission.GET_TASKS" />
 	-->

	<!-- Lower this when tested -->
	<uses-sdk android:targetSdkVersion="4" android:minSdkVersion="4" />

</manifest> 